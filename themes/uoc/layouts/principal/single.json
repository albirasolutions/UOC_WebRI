[{{ range $i, $s := .Site.AllPages }}{{- if and (eq $s.Type "solucio_tec") (ne $s.File.UniqueID "")}}{
    "type" : "add",
    "id" : {{ $s.File.UniqueID | jsonify }},
    "fields" : {
        {{- if and (isset $s.Params "language") (ne $s.Params.language nil) }}
			"idioma": {{$s.Params.language | jsonify}},{{- end }}
			{{- if and (isset $s.Params "title") (ne $s.Params.title nil) }}
			"title": {{$s.Params.title | jsonify}},{{- end }}
			{{- if and (isset $s.Params "general") (ne $s.Params.general nil) }}{{$general := index ($s.Params.general) 0 }}
			"name": {{$general.nom_solucio | jsonify}},
			"text_breu": {{$general.text_breu | jsonify}},
			"eslogan": {{$general.slogan | jsonify}},
			"imatge_alt": {{$s.Params.title | jsonify}},
			"imatge_title": {{$s.Params.title | jsonify}},
			"imatge_url": {{$general.img_background | jsonify}},
			"centre": {{$general.centre | jsonify}},
			"sector": {{$general.sector | jsonify}},
			"logo_url": {{$general.logo | jsonify}},{{$keywords := slice ""}}{{- range $k := $general.keywords}}{{$keywords := slice $k.value }}{{end}}{{- if ne $keywords nil }}
			"keywords": {{$keywords | jsonify}},{{end}}{{$xarxesList := slice ""}}{{$xarxesAddress := slice ""}}{{- range $x := $general.xarxes}}{{$xarxesList := slice $x.xarxa }}{{$xarxesAddress := slice $x.address }}{{end}}{{- if ne $xarxesList nil }}
			"xarxes_list": {{$xarxesList | jsonify}},{{end}}{{- if ne $xarxesAddress nil }}
			"xarxes_address": {{$xarxesAddress | jsonify}}{{end}}{{- end }}			
    }
}{{ if ne 47 $i}},{{end}}{{end}}{{end}}]
